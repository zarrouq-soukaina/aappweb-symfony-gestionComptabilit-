{% extends 'base.html.twig' %}

{% block title %}Commandevente{% endblock %}

{% block body %}
    <h1>Commandevente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commandevente.id }}</td>
            </tr>
            <tr>
                <th>DateVente</th>
                <td>{{ commandevente.DateVente ? commandevente.DateVente|date('Y-m-d') : '' }}</td>
            </tr>
             <tr>
                
                <td> <h2> Liste des produits commandés : </h2> </td>
            </tr>
             <tr>
                <th>Désignation Produit</th>
                <th>Quantité commandée</th>
                 <th>Prix</th>
               
            </tr>
            {% for lcp in commandevente.commandeventeProduits %}
           
            <tr>
                <td>{{ lcp.produit }}</td>
                <td>{{ lcp.QteCom }}</td>
                 <td>{{lcp.Prix }}</td>
               
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
             
       
        </tbody>
    </table>

    <a href="{{ path('commandevente_index') }}" class="btn btn-warning">Revenir à la liste des commandes de vente</a><br>

    <a href="{{ path('commandevente_edit', {'id': commandevente.id}) }}" class="btn btn-info">Modifier</a>

    {{ include('commandevente/_delete_form.html.twig') }}
{% endblock %}
