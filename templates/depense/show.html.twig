{% extends 'base.html.twig' %}

{% block title %}Depense{% endblock %}

{% block body %}
    <h1>Depense</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ depense.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ depense.Montant }}</td> 
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ depense.Motif }}</td>
            </tr>
            <tr>
                <th>DateDepense</th>
                <td>{{ depense.DateDepense ? depense.DateDepense|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ModePai</th>
                <td>{{ depense.modePai }}</td>
            </tr>
             

        </tbody>
    </table>

    <a href="{{ path('depense_index') }}" class="btn btn-warning">Revenir àla liste des dépenses</a><br>

    <a href="{{ path('depense_edit', {'id': depense.id}) }}" class="btn btn-info">Modifier</a>

    {{ include('depense/_delete_form.html.twig') }}
{% endblock %}
