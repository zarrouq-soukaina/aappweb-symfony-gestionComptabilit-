{% extends 'base.html.twig' %}
{% block body %}
<h3>inscription sur l'application ComptApp</h3>
<h5><u>Veuillez remplir ce formulaire</u></h5>
{{ form_start(form) }}
{{ form_row(form.username, {'label' : 'Nom d\'utilisateur','attr':
{'placeholder': 'Nom d\'utilisateur'}}) }}
{{ form_row(form.email, {'label' : 'Adresse email','attr':
{'placeholder': 'Adresse email'}}) }}
{{ form_row(form.password, {'label' : 'Mot de passe','attr':
{'placeholder': 'Mot de passe'}}) }}
{{ form_row(form.confirm_password, {'label' : 'Confirmation de mot de passe','attr':
{'placeholder': 'Confirmation de mot de passe'}}) }}
    <button class="btn btn-success">{{ button_label|default('inscription') }}</button>
{{ form_end(form) }}  
{% endblock %}